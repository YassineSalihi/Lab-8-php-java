<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AddEtudiant">

    <TextView android:text="Nom :" style="@style/text" />
    <EditText android:id="@+id/nom" style="@style/input" android:inputType="textPersonName" />

    <TextView android:text="PrÃ©nom :" style="@style/text" />
    <EditText android:id="@+id/prenom" style="@style/input" android:inputType="textPersonName" />

    <TextView android:text="Ville :" style="@style/text" />
    <Spinner android:id="@+id/ville" android:entries="@array/villes" style="@style/input" />

    <TextView android:text="Sexe :" style="@style/text" />
    <RadioGroup android:id="@+id/sexeGroup" android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="match_parent">
        <RadioButton android:id="@+id/m" android:text="Homme"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:checked="true"/>
        <RadioButton android:id="@+id/f" android:text="Femme"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
    </RadioGroup>

    <Button android:id="@+id/add" android:text="Ajouter"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />

</LinearLayout>